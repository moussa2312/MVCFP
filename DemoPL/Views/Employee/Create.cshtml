@using Demo.BLL.Dto.EmployeeDto
@using Demo.DAL.Models.Emp_Model
@model EmployeeViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Create Employee</h1>
    <form method="post" asp-controller="Employee" asp-action="Create" class="row col-8" enctype="multipart/form-data">

        <partial name="PartialViews/CreateEditEmployeePartial" model="Model" />
        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Save" />
            <a asp-controller="Employee" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>

@section ValidationScripts 
{
    <partial name="_ValidationScriptsPartial" />
}